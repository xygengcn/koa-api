{
    "name": "@xygengcn/koa-api",
    "version": "0.3.22",
    "description": "基于Typescript + KOA 开发的 Restful APi 接口",
    "main": "dist/core/index.js",
    "typings": "dist/core/index.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "postbuild": "rm -rf ./dist/controller ./dist/index.d.ts ./dist/index.js ./dist/middleware",
        "prepublish": "rm -rf ./dist && npm run build",
        "dev": "cross-env NODE_ENV=development nodemon ./src/index.ts",
        "prd": "pm2 start pm2.json",
        "start": "npm run prd"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xygengcn/koa-api.git"
    },
    "keywords": [
        "koa-api",
        "koa",
        "api",
        "RESTful",
        "typescript"
    ],
    "author": "xygengcn",
    "license": "MIT License",
    "bugs": {
        "url": "https://github.com/xygengcn/koa-api/issues"
    },
    "homepage": "https://github.com/xygengcn/koa-api#readme",
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^8.4.1",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-node": "^10.4.0",
        "tsc-alias": "^1.6.3",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.3"
    },
    "dependencies": {
        "@types/koa": "^2.13.4",
        "@types/koa-router": "^7.4.4",
        "@types/node": "^16.11.12",
        "koa": "^2.13.4",
        "koa-body": "^4.2.0",
        "koa-compose": "^4.1.0",
        "koa-router": "^10.1.1"
    }
}
