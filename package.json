{
    "name": "koa-api-plus",
    "version": "1.0.8",
    "description": "基于Typescript + KOA 开发的 Restful APi 接口",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "env-cmd -r .env.js -e development nodemon ./examples/full/index.ts",
        "dev:simple": "env-cmd -r .env.js -e development nodemon ./examples/hello-world/index.ts",
        "prepare": "husky install",
        "husky": "husky add .husky/commit-msg \"npx --no-install commitlint --edit \"$1\"\"",
        "build": "rm -rf ./dist && rollup -c ./rollup.config.js",
        "prepublish": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xygengcn/koa-api.git"
    },
    "keywords": [
        "koa-api",
        "koa",
        "api",
        "RESTful",
        "typescript"
    ],
    "author": "xygengcn",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/xygengcn/koa-api/issues"
    },
    "homepage": "https://github.com/xygengcn/koa-api#readme",
    "devDependencies": {
        "@commitlint/cli": "^17.4.4",
        "@commitlint/config-conventional": "^17.4.4",
        "@rollup/plugin-commonjs": "^24.1.0",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-typescript": "^11.1.0",
        "@types/klaw-sync": "^6.0.1",
        "@types/koa": "^2.13.6",
        "@types/koa-compose": "^3.2.5",
        "@types/koa-router": "^7.4.4",
        "@types/node": "^16.11.12",
        "env-cmd": "^10.1.0",
        "eslint": "^8.4.1",
        "husky": "^8.0.3",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "rollup": "^3.21.0",
        "rollup-plugin-dts": "^5.3.0",
        "rollup-plugin-tsc-alias": "^1.1.2",
        "ts-node": "^10.4.0",
        "tsc-alias": "^1.6.3",
        "tsconfig-paths": "^3.12.0",
        "tslib": "^2.5.0",
        "typescript": "^4.5.3"
    },
    "dependencies": {
        "inversify": "6.0.1",
        "is-directory": "0.3.1",
        "klaw-sync": "^6.0.0",
        "koa": "^2.14.2",
        "koa-body": "^6.0.1",
        "koa-compose": "^4.1.0",
        "koa-router": "^12.0.0",
        "reflect-metadata": "^0.1.13",
        "serialize-error": "8.1.0"
    }
}