{
    "name": "@xygengcn/koa-api",
    "version": "0.3.31",
    "description": "基于Typescript + KOA 开发的 Restful APi 接口",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "build": "rm -rf ./dist && rollup -c ./build.core.config.ts",
        "build:test": "gulp",
        "prepublish": "rm -rf ./dist && npm run build",
        "dev": "cross-env NODE_ENV=development nodemon ./src/index.ts",
        "sit": "cross-env NODE_ENV=sit nodemon ./test/index.js",
        "prd": "pm2 start pm2.json",
        "start": "npm run prd"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xygengcn/koa-api.git"
    },
    "keywords": [
        "koa-api",
        "koa",
        "api",
        "RESTful",
        "typescript"
    ],
    "author": "xygengcn",
    "license": "MIT License",
    "bugs": {
        "url": "https://github.com/xygengcn/koa-api/issues"
    },
    "homepage": "https://github.com/xygengcn/koa-api#readme",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.2",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@types/json-stringify-safe": "^5.0.0",
        "@types/node": "^16.11.12",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "cross-env": "^7.0.3",
        "eslint": "^8.4.1",
        "gulp": "^4.0.2",
        "gulp-clean": "^0.4.0",
        "gulp-merge": "^0.1.1",
        "gulp-ts-alias": "^2.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "json-stringify-safe": "^5.0.1",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "rollup": "^2.77.2",
        "rollup-plugin-dts": "^4.2.2",
        "rollup-plugin-typescript2": "^0.32.1",
        "ts-node": "^10.4.0",
        "tsc-alias": "1.7.0",
        "tsconfig-paths": "^3.12.0",
        "ttypescript": "^1.5.13",
        "typescript": "^4.5.3"
    },
    "dependencies": {
        "@types/koa": "^2.13.4",
        "@types/koa-router": "^7.4.4",
        "koa": "^2.13.4",
        "koa-body": "5.0.0",
        "koa-compose": "^4.1.0",
        "koa-router": "12.0.0"
    }
