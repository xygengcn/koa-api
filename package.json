{
  "name": "koa-api",
  "version": "0.1.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev:tsc": "tsc -w",
    "dev:nodemon": "cross-env NODE_ENV=development nodemon --inspect build/app.js",
    "dev": "tsc && concurrently npm:dev:*",
    "sit": "cross-env NODE_ENV=sit node build/app",
    "prd": "cross-env NODE_ENV=production pm2 start build/app.js",
    "build": "tsc && node build.js",
    "lint": "prettier ./src"
  },
  "dependencies": {
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-router": "^7.4.0",
    "mysql2": "^2.2.5",
    "sequelize": "^6.6.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.4.1",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.28",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "nodemon": "^1.19.1",
    "prettier": "2.3.1",
    "typescript": "^4.3.2"
  },
  "_moduleAliases": {
    "@core": "./build/core",
    "@util": "./build/core/utils",
    "@model": "./build/model"
  },
  "_moduleDirectories": [
    "node_modules_custom"
  ],
  "nodemonConfig": {
    "ignore": [
      "./build/config"
    ]
  }
}
