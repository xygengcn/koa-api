{
    "name": "@xygengcn/koa-api",
    "version": "0.3.31",
    "description": "基于Typescript + KOA 开发的 Restful APi 接口",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "build": "rm -rf ./dist && rollup -c ./build.core.config.js",
        "build:test": "gulp",
        "prepublish": "rm -rf ./dist && npm run build",
        "dev": "cross-env NODE_ENV=development nodemon ./src/index.ts",
        "sit": "cross-env NODE_ENV=sit nodemon ./test/index.js",
        "prd": "pm2 start pm2.json",
        "start": "npm run prd"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xygengcn/koa-api.git"
    },
    "keywords": [
        "koa-api",
        "koa",
        "api",
        "RESTful",
        "typescript"
    ],
    "author": "xygengcn",
    "license": "MIT License",
    "bugs": {
        "url": "https://github.com/xygengcn/koa-api/issues"
    },
    "homepage": "https://github.com/xygengcn/koa-api#readme",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^24.1.0",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "@rollup/plugin-typescript": "^11.1.0",
        "@types/json-stringify-safe": "^5.0.0",
        "@types/node": "^18.15.13",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "cross-env": "^7.0.3",
        "eslint": "^8.38.0",
        "gulp": "^4.0.2",
        "gulp-clean": "^0.4.0",
        "gulp-merge": "^0.1.1",
        "gulp-ts-alias": "^2.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "json-stringify-safe": "^5.0.1",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.7",
        "rollup": "^3.20.7",
        "rollup-plugin-dts": "^5.3.0",
        "ts-node": "^10.9.1",
        "tsc-alias": "1.8.5",
        "tsconfig-paths": "^4.2.0",
        "tslib": "^2.5.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@types/koa": "^2.13.6",
        "@types/koa-router": "^7.4.4",
        "koa": "^2.14.2",
        "koa-body": "6.0.1",
        "koa-compose": "^4.1.0",
        "koa-router": "12.0.0"
    }
